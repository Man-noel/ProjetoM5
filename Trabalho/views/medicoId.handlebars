    <link rel="stylesheet" href="/public/css/style.css">
    <link href="/public/css/features.css" rel="stylesheet">
</head>



<body>

    <div class="col-lg-11 mx-auto p-4 py-md-5">
        <div class="d-flex align-items-start pb-3 mb-5 border-bottom">

            <svg xmlns="http://www.w3.org/2000/svg" width="55" height="55" fill="currentColor"
                class="bi bi-clipboard2-pulse" viewBox="0 0 16 16" style="margin-right: 3%;">
                <path
                    d="M9.5 0a.5.5 0 0 1 .5.5.5.5 0 0 0 .5.5.5.5 0 0 1 .5.5V2a.5.5 0 0 1-.5.5h-5A.5.5 0 0 1 5 2v-.5a.5.5 0 0 1 .5-.5.5.5 0 0 0 .5-.5.5.5 0 0 1 .5-.5h3Z" />
                <path
                    d="M3 2.5a.5.5 0 0 1 .5-.5H4a.5.5 0 0 0 0-1h-.5A1.5 1.5 0 0 0 2 2.5v12A1.5 1.5 0 0 0 3.5 16h9a1.5 1.5 0 0 0 1.5-1.5v-12A1.5 1.5 0 0 0 12.5 1H12a.5.5 0 0 0 0 1h.5a.5.5 0 0 1 .5.5v12a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5v-12Z" />
                <path
                    d="M9.979 5.356a.5.5 0 0 0-.968.04L7.92 10.49l-.94-3.135a.5.5 0 0 0-.926-.08L4.69 10H4.5a.5.5 0 0 0 0 1H5a.5.5 0 0 0 .447-.276l.936-1.873 1.138 3.793a.5.5 0 0 0 .968-.04L9.58 7.51l.94 3.135A.5.5 0 0 0 11 11h.5a.5.5 0 0 0 0-1h-.128L9.979 5.356Z" />
            </svg>

            <span class="fs-2">Seja bem-vindo, doutor <strong>{{listarmedico.nome}}</strong></span>
        </div>

        <br>

        <main>

            <div class="row g-5 d-flex justify-content-evenly">


                <div class="col-md-6">

                    <h1 class="fw-semibold mb-0 fs-1" style="padding-bottom: 14%;">Suas informações</h1>

                    <div class="row row-cols-sm-2 g-3">

                        <div class="col d-flex flex-column gap-1">

                            <div
                                class="feature-icon-small d-inline-flex align-items-center justify-content-center text-bg-primary bg-gradient fs-4 rounded-3">
                                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor"
                                    class="bi bi-person" viewBox="0 0 16 16">
                                    <path
                                        d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z" />
                                </svg>
                            </div>

                            <h4 class="fw-semibold mb-0 fs-2">Nome: <p class="text-secondary fs-4">{{listarmedico.nome}}
                                </p>
                            </h4>

                        </div>



                        <div class="col d-flex flex-column gap-2">


                            <div
                                class="feature-icon-small d-inline-flex align-items-center justify-content-center text-bg-primary bg-gradient fs-4 rounded-3">

                                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor"
                                    class="bi bi-envelope-at" viewBox="0 0 16 16">
                                    <path
                                        d="M2 2a2 2 0 0 0-2 2v8.01A2 2 0 0 0 2 14h5.5a.5.5 0 0 0 0-1H2a1 1 0 0 1-.966-.741l5.64-3.471L8 9.583l7-4.2V8.5a.5.5 0 0 0 1 0V4a2 2 0 0 0-2-2H2Zm3.708 6.208L1 11.105V5.383l4.708 2.825ZM1 4.217V4a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v.217l-7 4.2-7-4.2Z" />
                                    <path
                                        d="M14.247 14.269c1.01 0 1.587-.857 1.587-2.025v-.21C15.834 10.43 14.64 9 12.52 9h-.035C10.42 9 9 10.36 9 12.432v.214C9 14.82 10.438 16 12.358 16h.044c.594 0 1.018-.074 1.237-.175v-.73c-.245.11-.673.18-1.18.18h-.044c-1.334 0-2.571-.788-2.571-2.655v-.157c0-1.657 1.058-2.724 2.64-2.724h.04c1.535 0 2.484 1.05 2.484 2.326v.118c0 .975-.324 1.39-.639 1.39-.232 0-.41-.148-.41-.42v-2.19h-.906v.569h-.03c-.084-.298-.368-.63-.954-.63-.778 0-1.259.555-1.259 1.4v.528c0 .892.49 1.434 1.26 1.434.471 0 .896-.227 1.014-.643h.043c.118.42.617.648 1.12.648Zm-2.453-1.588v-.227c0-.546.227-.791.573-.791.297 0 .572.192.572.708v.367c0 .573-.253.744-.564.744-.354 0-.581-.215-.581-.8Z" />
                                </svg>

                            </div>


                            <h4 class="fw-semibold mb-0 fs-2">E-mail: <p class="text-secondary fs-4">
                                    {{listarmedico.email}}
                                </p>
                            </h4>


                        </div>



                        <div class="col d-flex flex-column gap-2">

                            <div
                                class="feature-icon-small d-inline-flex align-items-center justify-content-center text-bg-primary bg-gradient fs-4 rounded-3">

                                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor"
                                    class="bi bi-envelope" viewBox="0 0 16 16">
                                    <path
                                        d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z" />
                                </svg>

                            </div>

                            <h4 class="fw-semibold mb-0 fs-2">Telefone: <p class="text-secondary fs-4">
                                    {{listarmedico.telefone}}</p>
                            </h4>


                        </div>

                        <div class="col d-flex flex-column gap-2">

                            <div
                                class="feature-icon-small d-inline-flex align-items-center justify-content-center text-bg-primary bg-gradient fs-4 rounded-3">
                                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor"
                                    class="bi bi-calendar2-date" viewBox="0 0 16 16">
                                    <path
                                        d="M6.445 12.688V7.354h-.633A12.6 12.6 0 0 0 4.5 8.16v.695c.375-.257.969-.62 1.258-.777h.012v4.61h.675zm1.188-1.305c.047.64.594 1.406 1.703 1.406 1.258 0 2-1.066 2-2.871 0-1.934-.781-2.668-1.953-2.668-.926 0-1.797.672-1.797 1.809 0 1.16.824 1.77 1.676 1.77.746 0 1.23-.376 1.383-.79h.027c-.004 1.316-.461 2.164-1.305 2.164-.664 0-1.008-.45-1.05-.82h-.684zm2.953-2.317c0 .696-.559 1.18-1.184 1.18-.601 0-1.144-.383-1.144-1.2 0-.823.582-1.21 1.168-1.21.633 0 1.16.398 1.16 1.23z" />
                                    <path
                                        d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM2 2a1 1 0 0 0-1 1v11a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V3a1 1 0 0 0-1-1H2z" />
                                    <path
                                        d="M2.5 4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5H3a.5.5 0 0 1-.5-.5V4z" />
                                </svg>

                            </div>

                            <h4 class="fw-semibold mb-0 fs-2">Nascimento: <p class="text-secondary fs-4">
                                    {{listarmedico.nascimento}}</p>
                            </h4>





                        </div>

                        <div class="col d-flex flex-column gap-2">

                            <div
                                class="feature-icon-small d-inline-flex align-items-center justify-content-center text-bg-primary bg-gradient fs-4 rounded-3">

                                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor"
                                    class="bi bi-card-heading" viewBox="0 0 16 16">
                                    <path
                                        d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z" />
                                    <path
                                        d="M3 8.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5zm0-5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5v-1z" />
                                </svg>
                            </div>

                            <h4 class="fw-semibold mb-0 fs-2">CPF: <p class="text-secondary fs-4">{{listarmedico.cpf}}
                                </p>
                            </h4>

                        </div>


                        <div class="col d-flex flex-column gap-2">

                            <div
                                class="feature-icon-small d-inline-flex align-items-center justify-content-center text-bg-primary bg-gradient fs-4 rounded-3">

                                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor"
                                    class="bi bi-asterisk" viewBox="0 0 16 16">
                                    <path
                                        d="M8 0a1 1 0 0 1 1 1v5.268l4.562-2.634a1 1 0 1 1 1 1.732L10 8l4.562 2.634a1 1 0 1 1-1 1.732L9 9.732V15a1 1 0 1 1-2 0V9.732l-4.562 2.634a1 1 0 1 1-1-1.732L6 8 1.438 5.366a1 1 0 0 1 1-1.732L7 6.268V1a1 1 0 0 1 1-1z" />
                                </svg>
                            </div>

                            <h4 class="fw-semibold mb-0 fs-2">Senha: <p class="text-secondary fs-4">
                                    {{listarmedico.senha}}</p>
                            </h4>

                        </div>


                        

                        <div>
                            <a class="btn btn-dark btn-lg editarBtnM"
                                href="/medico/editar/{{listarmedico.id}}">Editar</a>
                        </div>


                        <div>
                            <button type="button" class="btn btn-dark btn-lg editarBtnM" data-bs-toggle="modal"
                                data-bs-target="#exampleModal">
                                Excluir
                            </button>
                        </div>


                    </div>

                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                        aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel"><strong>Excluir perfil</strong>
                                    </h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Exclua seu Perfil e todos os dados contido nele permanentemente.
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary"
                                        data-bs-dismiss="modal">Fechar</button>
                                    <a class="btn btn-primary" href="/medico/excluir/{{listarmedico.id}}"
                                        role="button">Excluir</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{!-- fim dos dados --}}

                    <br>
                    <br>
                    <br>




                    <hr class="col-3 col-12 mb-5" style="opacity: 0.2;">







                    {{!-- exames marcados --}}

                    <div class="col-md-11">

                        <h1 class="fw-semibold mb-0 fs-1" style="padding-bottom: 5%;">Exames marcados</h1>

                        <div class="card card-body bg-light">

                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col">Exame</th>
                                        <th scope="col">Paciente</th>
                                        <th scope="col">Data</th>
                                        <th scope="col">Horário</th>
                                        <th scope="col"></th>
                                        <th scope="col"></th>
                                        <th scope="col"></th>

                                    </tr>
                                </thead>

                                <tbody>
                                    {{!-- colocaria as informaçoes igual no card --}}
                                    <tr>
                                        <th scope="row">1</th>
                                        <td>Bruno</td>
                                        <td>Segunda-feira</td>
                                        <td>16:00</td>

                                        <td><a class="btn btn-primary btn-sm" href="#">Editar</a></td>
                                        <td><a class="btn btn-primary btn-sm" href="#">Excluir</a></td>
                                          <td><a class="btn btn-primary btn-sm" href="#">Prescrição</a></td>


                                    </tr>
                                    <tr>
                                        <th scope="row">2</th>
                                        <td>Fernando</td>
                                        <td>Sexta-feira</td>
                                        <td>13:00</td>

                                        <td><a class="btn btn-primary btn-sm" href="#">Editar</a></td>
                                        <td><a class="btn btn-primary btn-sm" href="#">Excluir</a></td>
                                          <td><a class="btn btn-primary btn-sm" href="#">Prescrição</a></td>
                                    </tr>

                                </tbody>
                            </table>


                        </div>

                    </div>





                </div>






                {{!-- consultas e marcar exames --}}
                <div class="col-md-6" style="justify-content: center;">

                    <h1 class="fw-semibold mb-0 fs-1" style="padding-bottom: 10%; margin-left:8%">Consultas realizadas</h1>

                    <div class="row" style="justify-content: center;">

                        {{#each listarC}}

                        <div class="card text-dark bg-light" style="width: 16rem; margin: 3%">

                            <div class="card-body">


                                <h4 class="card-title" style="margin-bottom: 10px;"><strong>Consulta n.º
                                        {{this.consultaid}}</strong></h4>
                                <p class="text-dark fs-6">
                                    <strong>Nome:</strong> {{cliente}}
                                    <br>
                                    <strong>Data:</strong> {{data}}
                                    <br>
                                    <strong>Horário:</strong> {{horario}}
                                    <br>
                                    <strong>Sintomas:</strong> {{sintomas}}
                                </p>

                                <div class="form-check form-switch" style="margin-bottom: 5%;">
                                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                                    <label class="form-check-label" for="flexSwitchCheckDefault">Consulta realizada</label>
                                </div>


                                <a class="btn btn-primary" href="/index_exames">Marcar exame</a>

                            </div>
                        </div>

                        {{/each}}


                    </div>
                </div>


            </div>

    </div>


    </main>




    <footer class="pt-5 my-5 text-muted border-top text-center">
        Created by the Clínica Resilia team &middot; &copy; 2023
    </footer>

    </div>


